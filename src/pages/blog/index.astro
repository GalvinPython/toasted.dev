---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/main.astro";

const allPosts = await getCollection("blog");
---

<MainLayout>
  <ul class="grid grid-cols-1 gap-2 md:grid-cols-2">
    {
      allPosts.map((post) => (
        <li class="rounded-lg bg-orange-300/50 px-3 py-2 transition-all hover:opacity-50">
          <a href={`/blog/${post.slug}`}>
            <h1 class="text-2xl font-bold">{post.data.title}</h1>
            <p>{post.data.description}</p>
            <time
              class="text-xs"
              datetime={post.data.createdAt.toLocaleDateString()}
            >
              {post.data.createdAt.toLocaleString(undefined, {
                month: "short",
                day: "numeric",
                year: "numeric",
              })}
            </time>
          </a>
        </li>
      ))
    }
  </ul>
</MainLayout>
