---
import Toast from "../icons/toast.astro";
import NavLinks from "../components/nav-links.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="en" class="bg-orange-300/50">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} â€” ToastedToast` : "ToastedToast"}</title>
    <meta name="description" content="frontend & discord bot developer" />
    <meta property="og:title" content="ToastedToast" />
    <meta
      property="og:description"
      content="frontend & discord bot developer"
    />
    <meta property="og:url" content="https://toasted.is-a.dev/" />
    <meta property="og:image" content="https://toasted.is-a.dev/logo.png" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content="@ToastedDev" />
    <meta name="twitter:creator:id" content="1145171094556426240" />
    <meta name="twitter:title" content="ToastedToast" />
    <meta
      name="twitter:description"
      content="frontend & discord bot developer"
    />
    <meta name="twitter:image" content="https://toasted.is-a.dev/logo.png" />
    <meta name="theme-color" content="#f97316" />
    <ViewTransitions />
  </head>
  <body class="mx-auto max-w-3xl p-4">
    <header class="flex items-center justify-between pb-4">
      <nav
        class="text-2xl font-semibold text-orange-600 transition-all hover:opacity-75"
      >
        <a href="/" class="flex items-center gap-2">
          <Toast class="text-3xl" />
          <p>ToastedToast</p>
        </a>
      </nav>
      <NavLinks slug={Astro.url.pathname} />
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
